@model IEnumerable<HumanResources.Models.Employee>

@{
    ViewBag.Title = "Employees";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="page-content">

    <div class="page-header">
        <h1>
            Employees
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->
            <div class="row">
                <div class="col-xs-12">
                    <div class="clearfix">
                        <div class="pull-right tableTools-container"></div>
                    </div>
                    <div class="table-header">
                        Results for "employees"
                    </div>

                    <!-- div.table-responsive -->
                    <!-- div.dataTables_borderWrap -->
                    <div>
                        <table id="employees-table" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="center">
                                        <label class="pos-rel">
                                            <input type="checkbox" class="ace" />
                                            <span class="lbl"></span>
                                        </label>
                                    </th>
                                    <th>
                                        <i class="ace-icon fa fa-calendar bigger-110 hidden-480"></i>
                                        Employee No
                                    </th>
                                    <th>
                                        <i class="ace-icon fa fa-clipboard bigger-110 hidden-480"></i>
                                        Name
                                    </th>
                                    <th>
                                        <i class="ace-icon fa fa-envelope bigger-110 hidden-480"></i>
                                        Email
                                    </th>
                                    <th class="hidden-480">
                                        <i class="ace-icon fa fa-calendar bigger-110 hidden-480"></i>
                                        Date Joined
                                    </th>

                                    <th>
                                        <i class="ace-icon fa fa-briefcase bigger-110 hidden-480"></i>
                                        Job Position
                                    </th>
                                    <th>
                                        <i class="ace-icon fa fa-briefcase bigger-110 hidden-480"></i>
                                        Department Name
                                    </th>
                                    <th class="hidden-480">
                                        <i class="ace-icon fa fa-question-circle bigger-110 hidden-480"></i>
                                        Status
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var employee in Model)
                                {
                                <tr>
                                    <td class="center">
                                        <label class="pos-rel">
                                            <input type="checkbox" class="ace" />
                                            <span class="lbl"></span>
                                        </label>
                                    </td>

                                    <td>
                                        @employee.EmployeeNo
                                    </td>
                                    <td>@employee.FullName</td>
                                    <td>@employee.EMail</td>
                                    <td class="hidden-480">@employee.Date_Of_Joining_the_Company</td>
                                    <td>@employee.JobTitle</td>
                                    <td>@employee.Department_Name</td>
                                    <td class="hidden-480">
                                        <span class="label label-sm label-warning">@employee.Status</span>
                                    </td>

                                    <td>
                                        <div class="hidden-sm hidden-xs action-buttons">
                                            <a class="blue" href="@Url.Action("ViewEmployee", "Employees", new { id = employee.EmployeeNo })">
                                                <i class="ace-icon fa fa-search-plus bigger-130"></i>
                                            </a>

                                            <a class="green" href="@Url.Action("Edit", "Employees", new { id = employee.EmployeeNo })">
                                                <i class="ace-icon fa fa-pencil bigger-130"></i>
                                            </a>

                                            <a class="red deleteemployee" href="#" data-docno="@employee.EmployeeNo">
                                                <i class="ace-icon fa fa-trash-o bigger-130"></i>
                                            </a>

                                        </div>

                                        <div class="hidden-md hidden-lg">
                                            <div class="inline pos-rel">
                                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown" data-position="auto">
                                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                                </button>

                                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                                    <li>
                                                        <a href="@Url.Action("ViewEmployee", "Employees", new { id = employee.EmployeeNo })" class="tooltip-info" data-rel="tooltip" title="View">
                                                            <span class="blue">
                                                                <i class="ace-icon fa fa-search-plus bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>

                                                    <li>
                                                        <a href="@Url.Action("Edit", "Employees", new { id = employee.EmployeeNo })" class="tooltip-success" data-rel="tooltip" title="Edit">
                                                            <span class="green">
                                                                <i class="ace-icon fa fa-pencil-square-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>


                                                    <li>
                                                        <a href="" class="tooltip-error deleteemployee" data-docno="@employee.EmployeeNo" data-rel="tooltip" title="Delete">
                                                            <span class="red">
                                                                <i class="ace-icon fa fa-trash-o bigger-120"></i>
                                                            </span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</div>

