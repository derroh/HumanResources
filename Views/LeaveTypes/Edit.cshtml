@model HumanResources.ViewModels.LeaveTypeViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="page-content">

    <div class="page-header">
        <h1>
            Edit Leave Type
        </h1>
    </div><!-- /.page-header -->

    <div class="row">
        <div class="col-xs-12">
            <!-- PAGE CONTENT BEGINS -->

            <div class="widget-box">
                <div class="widget-header widget-header-blue widget-header-flat">
                    <h4 class="widget-title lighter">New Leave Type Wizard</h4>
                </div>

                <div class="widget-body">
                    <div class="widget-main">
                        <div id="fuelux-wizard-container">

                            <div class="step-content pos-rel">
                                <h3 class="lighter block green">Enter the following information</h3>

                                @using (Html.BeginForm("CreateLeaveType", "LeaveTypes", FormMethod.Post, new { @id = "leavetypeform", @class = "form-horizontal" }))
                                {
                                    @Html.AntiForgeryToken()

                                    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;

                                    <div class="space-2"></div>

                                    <div class="form-group">
                                        <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="name">Leave Type Code:</label>

                                        <div class="col-xs-12 col-sm-9">
                                            <div class="clearfix">
                                                @Html.TextBoxFor(m => m.Code, new { @class = "col-xs-12 col-sm-5", @value = Model.Code })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="Description">Description:</label>

                                        <div class="col-xs-12 col-sm-9">
                                            <div class="clearfix">
                                                @Html.TextBoxFor(m => m.Description, new { @class = "col-xs-12 col-sm-5", @value = Model.Description })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="space-2"></div>

                                    <div class="form-group">
                                        <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="TotalAbsenceDays">Total Absence Days:</label>

                                        <div class="col-xs-12 col-sm-9">
                                            <div class="clearfix">
                                                @Html.TextBoxFor(m => m.TotalAbsenceDays, new { @class = "col-xs-12 col-sm-8", @value = Model.TotalAbsenceDays })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.TotalAbsenceDays, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="space-2"></div>

                                    <div class="hr hr-dotted"></div>

                                    <div class="form-group">
                                        <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="UnitofMeasure">Unit of Measure</label>

                                        <div class="col-xs-12 col-sm-9">
                                            <div class="clearfix">

                                                @Html.DropDownListFor(m => m.UnitofMeasure,
                                                                    new SelectList(ViewBag.UnitofMeasure, "Code", "Description", Model.UnitofMeasure),
                                                                    "Select UoM",
                                                                    new { @class = "select2", @data_placeholder = "Click to Choose..." })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.UnitofMeasure, "", new { @class = "text-danger  " })
                                        </div>
                                    </div>

                                    <div class="space-2"></div>

                                    <div class="form-group">
                                        <label class="control-label col-xs-12 col-sm-3 no-padding-right" for="state">AnnualLeaveDaysType</label>

                                        <div class="col-xs-12 col-sm-9">
                                            <div class="clearfix">

                                                @Html.DropDownListFor(m => m.AnnualLeaveDaysType,
                                                                    new SelectList(ViewBag.AnnualLeaveDaysType, "Code", "Description", Model.AnnualLeaveDaysType),
                                                                    "Select leave days type",
                                                                    new { @class = "select2", @data_placeholder = "Click to Choose..." })
                                            </div>
                                            @Html.ValidationMessageFor(m => m.AnnualLeaveDaysType, "", new { @class = "text-danger  " })
                                        </div>
                                    </div>

                                    <div class="space-8"></div>


                                    @Html.HiddenFor(m => m.OldCode)
                                }
                            </div>
                        </div>

                        <hr />
                        <div class="wizard-actions center">
                            <button class="btn btn-success btn-next" id="UpdateLeaveType">
                                Save
                                <i class="ace-icon fa fa-floppy-o  icon-on-right"></i>
                            </button>
                        </div>
                    </div><!-- /.widget-main -->
                </div><!-- /.widget-body -->
            </div>
            <!-- PAGE CONTENT ENDS -->
        </div><!-- /.col -->
    </div><!-- /.row -->

</div>

